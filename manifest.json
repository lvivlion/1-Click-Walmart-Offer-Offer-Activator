{
  "manifest_version": 3,
  "name": "Walmart Offer Activator",
  "version": "1.0.0",
  "description": "Automatically activate all Walmart Cash offers across multiple pages and track the count",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.walmart.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.walmart.com/offer/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
